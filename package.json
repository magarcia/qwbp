{
  "name": "qwbp",
  "version": "0.1.0",
  "description": "QR-WebRTC Bootstrap Protocol - Serverless WebRTC signaling via QR codes",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "SPECIFICATION.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:demo": "esbuild demo/demo.ts --bundle --outfile=demo/demo.js --format=esm",
    "build:spec": "node scripts/build-rfc.js",
    "dev": "tsc --watch",
    "demo": "esbuild demo/demo.ts --bundle --outfile=demo/demo.js --format=esm --servedir=demo --serve=0.0.0.0:8080",
    "demo:tunnel": "npm run build:demo && echo 'Starting tunnel...' && npx localtunnel --port 8080 --local-host 127.0.0.1 & npx serve demo -l 8080",
    "docs": "typedoc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "webrtc",
    "qr-code",
    "signaling",
    "peer-to-peer",
    "serverless",
    "p2p",
    "datachannel"
  ],
  "author": "Martin Garcia Monterde <martin@magarcia.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magarcia/qwbp.git"
  },
  "bugs": {
    "url": "https://github.com/magarcia/qwbp/issues"
  },
  "homepage": "https://github.com/magarcia/qwbp#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "jsqr": "^1.4.0",
    "qrcode": "^1.5.4",
    "typedoc": "^0.26.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "jsqr": "^1.4.0",
    "qrcode": "^1.5.0"
  },
  "peerDependenciesMeta": {
    "jsqr": {
      "optional": true
    },
    "qrcode": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
